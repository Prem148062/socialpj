extends ../layouts/feed

block content
  .row
    each user in users
      .col-6.col-md-4.col-lg-3.col-xl-2
        .card
          .card-body
            img.d-block.mx-auto.shadow.mb-3.rounded-circle(src=user.avatarUrl alt=user.username)
            h2.h5= user.displayName
            p.text-secondary= user.username
            a(href=`/profile/${user.username}`) ดูโปรไฟล์
    nav.mt-4
      ul.pagination.justify-content-center
        each page in totalPage
          li.page-item(class=currentPage == page ? 'active' : '')
            a.page-link(href=`?page=${page}`)= page
