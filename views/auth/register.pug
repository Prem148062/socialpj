extends ../layouts/auth

block content
  h1
    i.bi.bi-person-plus
    span.ms-2 Register
  hr
  form(action="/auth/register" method="post")
    .mb-3
      label.form-label(for="inputEmail")
        i.bi.bi-envelope
        span.ms-1 Email Addrees:
      input#inputEmail.form-control(type="email" name="email" required placeholder="Enter Your Email Address")
    .mb-3
      label.form-label(for="inputPassword")
        i.bi.bi-key
        span.ms-1 Password:
      input#inputPassword.form-control(type="password" name="password" required placeholder="Enter Your Password")
    .mb-3
      label.form-label(for="inputConfirmPassword")
        i.bi.bi-key
        span.ms-1 ConfirmPassword:
      input#inputConfirmPassword.form-control(type="password" name="cfpassword" required placeholder="Enter Your Verify Password Again")
    .d-grid.mt-4
      button.btn.btn-primary Submit
  .bg-success.bg-opacity-25.p-3.mt-4
    .d-grid
      h2.h4.text-center If you have account ?
      a.btn.btn-warning.mt-2(href="/auth/login") Login
